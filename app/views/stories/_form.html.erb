<%= form_for [current_project, @story] do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name%><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  
  
  <div class="field">
     <%= f.label :stage %><br />
     <%= select("story", "stage", [["s1",1],["s2",2]])%>
  </div>

  <div class="field">
    <%= f.label :points %><br />
    <%= f.number_field :points%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
